{
  "name": "viem-kms-signer",
  "version": "1.0.1",
  "description": "A Viem compatible signer that connects to AWS KMS",
  "main": "dist/index.js",
  "repository": "jackchuma/viem-kms-signer",
  "scripts": {
    "build": "tsc",
    "clean": "rm -r dist",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "keywords": [],
  "author": "Jack Chuma",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-kms": "^3.499.0",
    "asn1.js": "^5.4.1",
    "bn.js": "^5.2.1",
    "viem": "^2.21.16"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
